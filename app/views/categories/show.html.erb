<div class="container">
  <h1><%= @category.name %></h1>
</div>



<div class="link">
  <%= link_to "New post", new_category_post_path(@category) %>
  <br><br>
  <table>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan='3'></th>
    </tr>

    <% if @category.posts %>
      <% @category.posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.description %></td>
          <td><%= link_to 'Show', category_post_path(@category, post) %></td>
          <td><%= link_to 'Edit', edit_category_post_path(@category, post) %></td>
          <td><%= link_to 'Destroy', category_post_path(@category, post), method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>
